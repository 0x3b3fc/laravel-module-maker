    /**
     * Register Livewire components.
     */
    protected function registerLivewireComponents(): void
    {
        Livewire::component('{{moduleLower}}s.index', \{{moduleNamespace}}\Livewire\Index::class);
        Livewire::component('{{moduleLower}}s.create', \{{moduleNamespace}}\Livewire\Create::class);
        Livewire::component('{{moduleLower}}s.edit', \{{moduleNamespace}}\Livewire\Edit::class);
    }

    /**
